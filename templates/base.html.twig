         <link rel="stylesheet" href="/build/app.css"> -->
{% endblock %}

{% block logo_mini %}<b>I</b>K{% endblock %}
{% block logo_large %} IT - KIDS {% endblock %}
{% block page_title %}IT - KIDS{% endblock %}
{% block page_subtitle %}{% endblock %}

{% block footer %}
    <footer class="main-footer"></footer>
{% endblock %}

{% block sidebar_search %}
{% endblock %}

{% block sidebar_nav %}
    {{ render(controller('App\\Controller\\SidebarController::menuAction', {'request':app.request})) }}
{% endblock %}

{% block navbar_user %}
    {{ render(controller('App\\Controller\\NavbarController::userAction')) }}
{% endblock %}

{% block breadcrumb %}{% endblock %}
{% block javascripts %}
    <!-- Renders app.js & a webpack runtime.js file
        <script src="/build/runtime.js"></script>
        <script src="/build/app.js"></script> -->
    {{ parent() }}
    {{ encore_entry_script_tags('app') }}
    {% include 'includes/javascript.html.twig' %}
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
    <script type="text/javascript">
        // $('.sidebar__ul a').click(function (e) {
        //     e.preventDefault();
        //     $(this).tab('show');
        // });

        $(document).on('click', '.sidebar__ul li a', function () {
            var i = $(this).closest('li').index();
            $('.sidebar__ul li a').removeClass('active');
            $(this).addClass('active');
            $('.sidebar__accordion >div').hide();
            $('.sidebar__accordion >div').eq(i).show();
        });

        $(document).ready(function () {
            if ($('.form-main').length) {
                $('.form-main form').prepend($('#form_save'))
            }
        });
    </script>
{% endblock %}

