{% extends 'base.html.twig' %}

{% block page_title %}Java Articles{% endblock %}

{% block page_content %}
    <a class="btn" href="{{ path('java_article_new') }}">Create new</a>
    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Title</th>
            <th>Description</th>
{#            <th>Code</th>#}
            <th>Slug</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for java_article in java_articles %}
            <tr>
                <td>{{ java_article.id }}</td>
                <td>{{ java_article.title }}</td>
                <td>{{ java_article.description }}</td>
{#                <td>{{ java_article.code }}</td>#}
                <td>{{ java_article.slug }}</td>
                <td>
                    <a class="fa fa-book-open" href="{{ path('java_article_show', {'id': java_article.id}) }}"></a>
                    <a class="fa fa-edit" href="{{ path('java_article_edit', {'id': java_article.id}) }}"></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
